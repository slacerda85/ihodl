{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/core/services/lightningMonitor.ts", "src/core/services/liquidityManager.ts"],
  "exclude": ["bitcoin/**", "**/*.test.ts", "**/*.spec.ts"]
}
